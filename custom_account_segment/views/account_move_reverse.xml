<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_move_reverse_form" model="ir.ui.view">
            <field name="name">account.move.reverse.form</field>
            <field name="model">account.move.reverse</field>
            <field name="arch" type="xml">
                <form string="Register Payment">
                    <field name="move_pos_id" invisible="1" force_save="1"/>
                    <group>
                        <group name="group1">
                            <field name="journal_id" options="{'no_open': True, 'no_create': True}" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Crear Nota Credito" name="action_create_refund" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
